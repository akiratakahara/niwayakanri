# 環境設定
ENVIRONMENT=development

# データベース設定
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/niwayakanri
REDIS_URL=redis://localhost:6379

# Supabase設定
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# API設定
NEXT_PUBLIC_API_URL=http://localhost:8000
API_SECRET_KEY=your_api_secret_key

# メール設定
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@niwayakanri.com
FROM_NAME=勤怠・社内申請システム

# LINE通知設定（オプション）
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token
LINE_CHANNEL_SECRET=your_line_channel_secret

# ファイルアップロード設定
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# セキュリティ設定
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS設定
ALLOWED_ORIGINS=http://localhost:3000,https://niwayakanri.com
ALLOWED_HOSTS=localhost,niwayakanri.com

# ログ設定
LOG_LEVEL=INFO
LOG_FORMAT=json

# 監視設定
SENTRY_DSN=your_sentry_dsn





